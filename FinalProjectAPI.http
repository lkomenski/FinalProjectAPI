@FinalProjectAPI_HostAddress = http://localhost:5077
@contentType = application/json

# =============================================================================
# AUTHENTICATION & LOGIN
# =============================================================================

### Customer Login
POST {{FinalProjectAPI_HostAddress}}/api/login/customer
Content-Type: {{contentType}}

{
  "email": "testcustomer@example.com",
  "password": "password"
}

### Employee Login  
POST {{FinalProjectAPI_HostAddress}}/api/login/employee
Content-Type: {{contentType}}

{
  "email": "employee@example.com",
  "password": "password"
}

### Vendor Login
POST {{FinalProjectAPI_HostAddress}}/api/login/vendor
Content-Type: {{contentType}}

/// DIFFERENTIATE BETWEEN THE TWO VENDOR ACCOUNTS I HAVE

{
  "email": "testvendor@example.com", 
  "password": "password123"
}

# =============================================================================
# CUSTOMER MANAGEMENT
# =============================================================================

### Register New Customer
POST {{FinalProjectAPI_HostAddress}}/api/customer/register
Content-Type: {{contentType}}

{
  "firstName": "John",
  "lastName": "Doe",
  "email": "john.doe@example.com",
  "password": "securePassword123"
}

### Get Customer Profile
GET {{FinalProjectAPI_HostAddress}}/api/customer/profile/1
Accept: {{contentType}}

### Update Customer Profile
PUT {{FinalProjectAPI_HostAddress}}/api/customer/profile/1
Content-Type: {{contentType}}

{
  "customerId": 1,
  "firstName": "John",
  "lastName": "Smith",
  "email": "john.smith@example.com"
}

### Deactivate Customer
PUT {{FinalProjectAPI_HostAddress}}/api/customer/deactivate/1
Accept: {{contentType}}

### Delete Customer
DELETE {{FinalProjectAPI_HostAddress}}/api/customer/1
Accept: {{contentType}}

# =============================================================================
# PRODUCTS MANAGEMENT
# =============================================================================

### Get All Products
GET {{FinalProjectAPI_HostAddress}}/api/products
Accept: {{contentType}}

### Get Product by ID
GET {{FinalProjectAPI_HostAddress}}/api/products/1
Accept: {{contentType}}

### Get Featured Products
GET {{FinalProjectAPI_HostAddress}}/api/products/featured
Accept: {{contentType}}

### Get Best Sellers
GET {{FinalProjectAPI_HostAddress}}/api/products/best-sellers
Accept: {{contentType}}

### Add New Product
POST {{FinalProjectAPI_HostAddress}}/api/products
Content-Type: {{contentType}}

{
  "categoryID": 1,
  "productCode": "GUIT001",
  "productName": "Acoustic Guitar Starter Pack",
  "description": "Perfect acoustic guitar for beginners",
  "listPrice": 299.99,
  "discountPercent": 10.0,
  "imageURL": "/images/guitars/acoustic-starter.jpg"
}

### Update Product
PUT {{FinalProjectAPI_HostAddress}}/api/products/1
Content-Type: {{contentType}}

{
  "productID": 1,
  "categoryID": 1,
  "productCode": "GUIT001",
  "productName": "Premium Acoustic Guitar",
  "description": "High-quality acoustic guitar for professionals",
  "listPrice": 599.99,
  "discountPercent": 5.0,
  "imageURL": "/images/guitars/premium-acoustic.jpg"
}

### Activate Product
PUT {{FinalProjectAPI_HostAddress}}/api/products/activate/1
Accept: {{contentType}}

### Deactivate Product
PUT {{FinalProjectAPI_HostAddress}}/api/products/deactivate/1
Accept: {{contentType}}

### Delete Product
DELETE {{FinalProjectAPI_HostAddress}}/api/products/1
Accept: {{contentType}}

